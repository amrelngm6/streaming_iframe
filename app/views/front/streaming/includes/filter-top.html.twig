                                    <div class="flex w-full gap-4">
                                        <span class="w-full text-base dark:text-gray-300  text-gray-600 ">{{lang.translate('Genre')}}</span>
                                        <img class="w-4 h-4 mt-2" src="/src/front_assets/svg/arrow.svg" />
                                    </div>
                                    <div class="py-3 inline-block ">
                                        <span class="{{item.lang_content.title ?? 'hidden'}} text-xs rounded-full py-1 px-2 bg-gray-300 text-gray-800  gap-2 inline-block">    
                                            <span class="px-2 flex gap-2">{{item.lang_content.title}} </span> 
                                        </span> 
                                    </div>
