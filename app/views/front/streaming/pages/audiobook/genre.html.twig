
<div class="py-4 px-2 w-full dark:bg-gray-900 bg-white   p-8 rounded-lg shadow shadow-lg relative">

    <div class="w-full text-primary border-1 py-4 px-8">
        <div class="w-full dark:text-gray-300 text-xl font-bold tracking-wide">{{item.lang_content.title}}</div>
    </div>
	<div class="w-full lg:flex gap-6 p-8">

		<div class="min-w-56  z-10 relative" id="filter-parent">
			{% include 'views/front/' ~ template ~ '/includes/book-filter-sidebar.html.twig' %}
		</div>
		<div class="w-full relative  rounded-lg shadow-md  ">
			<div class="w-full lg:p-8 py-8 px-2">
				<div class="w-full flex">
					<div class="w-full ">
						<ul class="w-full grid-cols-2 grid gap-10 pb-20">
							{% for audiobook in list.items %}
							{% include 'views/front/' ~ template ~ '/pages/audiobook/item.html.twig' %}			
							{% endfor %}
						</ul>
					</div>
				</div>
                {% set view_items_limit = app.SystemSetting.view_audiobooks_limit %}
				{% include 'views/front/' ~ template ~ '/includes/pagination.html.twig' %}
			</div>
		</div>
	</div>
	<div class="h-10"></div>
</div>
