                        <div class=" w-full  relative lg:h-64 h-56 overflow-hidden rounded-2xl mb-4 border border-gray-200 dark:border-gray-600">
                            {% set a = channel.findMediaByTime(channel.channel_id, "now"|date("H:i:s") ) %}
                            <div class=" w-full  gradient-top-overlay">
                                <img style="z-index:0" src="/stream?thumbnail=600&image={{channel.picture_name}}" class="w-full shadow-xl absolute top-0 left-0 "/>
                            </div>
                            <div class=" w-full h-96 absolute bottom-0 left-0 gradient-top-overlay" style="z-index:0; "></div>
                            <div class="z-30 absolute lg:bottom-10 lg:left-20 left-4 bottom-4  z-10  lg:w-2/3 text-gray-100 dark:text-gray-300">
                                <a class="lg:text-4xl text-lg text-white ajax-load" href="/channel/{{channel.channel_id}}">{{channel.name}}</a>

                                <div class=" float-right mt-3">
                                    <a href="/channel/{{channel.channel_id}}"  class="ajax-load dark:border-gray-600 hover:border-rose-400 hover:text-rose-400 border border-2 lg:border-4 border-white rounded-full py-2 px-2 lg:px-6">
                                        <span>{{lang.translate('Stream')}}</span>
                                    </a>
                                </div>

                                <div class="w-full flex gap-4 pt-6">
                                    <div class="flex gap-4 mt-6 text-sm text-gray-100 h-8">
                                    
                                        
                                        {% set item = channel %}
                                        {% set itemId = channel.channel_id %}
                                        {% set itemType = 'channel' %}
                                        {% include 'views/front/' ~ template ~ '/includes/item-stats.html.twig' %}
                                        <span x-on:click="jQuery('#show-box-path').val('channel/{{item.channel_id}}'); jQuery('#share-popup').removeClass('hidden')" class="cursor-pointer mx-2 text-sm text-gray-100 pt-1" ><img src="/src/front_assets/svg/share.svg" class="w-5"> <span class="tooltiptext">{{lang.translate('Share')}}</span> </span>

                                    </div>
                                </div>

                            </div>

                            {% if channel.activeItem.channel_media_id > 0 %}
                            <img src="/src/front_assets/svg/live.svg" class="absolute bottom-0 right-0 ml-20 w-20" />
                            {% endif  %}
                        </div>