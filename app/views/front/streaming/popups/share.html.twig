<div x-data="{}" class="fixed inset-0 z-50 overflow-y-auto hidden transition-all transition" id="share-popup" role="dialog" aria-modal="true" data-headlessui-state="open">
	<div class="min-h-full text-center">
		<div class="fixed inset-0 bg-download_popup blurFilter opacity-100" id="headlessui-dialog-overlay-:r3n:" aria-hidden="true" data-headlessui-state="open"></div>
		<span class="hidden lg:inline-block h-screen align-middle" aria-hidden="true">â€‹</span>
		<div data-testid="loginContainer" class="inline-block dark:text-white w-full max-w-[42.125rem] sm:w-auto overflow-hidden text-left align-middle transition-all transform shadow-xl h-auto md:h-[29.125rem] rounded-xl border-box opacity-100 scale-100">
			<div class="grid grid-cols-7 md:grid-cols-12 h-full relative">
				<div class="login_loginImage__1Djxq bg-cover hidden md:block col-span-5 w-full bg-wynk-dark-dark_popup bg-no-repeat" style="background-image: url(/uploads/img/mic.jpg)"></div>
				<div class="align-middle bg-wynk-dark-dark_popup col-span-7 px-8 pb-8 pt-10 md:pb-6 md:pl-[2.125rem] md:pr-7 relative flex flex-col justify-between">
					<div x-on:click="jQuery('#share-popup').addClass('hidden')" data-testid="loginCrossButton" class="h-6 w-6 right-4 top-4 dark:text-white hover:text-gray-400 cursor-pointer absolute">
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true" class="brightness-200">
							<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
					</div>

					<div class="inline-block w-full">
						<input type="hidden" id="show-box-path" />
						<div class="align-middle dark:text-white  opacity-100 overflow-hidden rounded-2xl sm:w-auto text-left transform transition-all">
                            <h2 class="text-2xl dark:text-gray-300 w-full ">{{lang.translate('Share this item')}}</h2>
                            <hr class="opacity-0 my-6" />
							
							<div class=" justify-between block grid grid-cols-1 gap-6 ">
								<div class="cursor-pointer block w-full group flex gap-6 gap">
									<img src="/src/front_assets/svg/whatsapp.svg" width="40" />
									<a href="javascript:;" x-on:click="window.open('https://wa.me/?text={{app.CONF.url}}'+jQuery('#show-box-path').val())"  class="block pt-2 share-dialog_label__od1MX dark:group-hover:text-wynk-dark-subtitle-gray dark:text-wynk-dark-text-secondary">Whatsapp</a>
								</div>
                                
								<div class="cursor-pointer block w-full group flex gap-6 gap">
									<img src="/src/front_assets/svg/facebook_blue.svg" width="40" />
									<a href="javascript:;" x-on:click="window.open('https://www.facebook.com/sharer/sharer.php?u={{app.CONF.url}}'+jQuery('#show-box-path').val())" target="_blank" class="block pt-2 share-dialog_label__od1MX dark:group-hover:text-wynk-dark-subtitle-gray dark:text-wynk-dark-text-secondary">Facebook</a>
								</div>
                                
								<div class="cursor-pointer block w-full group flex gap-6 gap">
									<img src="/src/front_assets/svg/link.svg" width="40" />
									<a href="javascript:;" onclick="(function(){ 
									navigator.clipboard.writeText('{{app.CONF.url}}'+jQuery('#show-box-path').val());
									Swal.fire('{{lang.translate('Done')}}', '{{lang.translate('Link copied to your clipboard')}}', 'success'); })()" id="copy-link" class="block pt-2 share-dialog_label__od1MX dark:group-hover:text-wynk-dark-subtitle-gray dark:text-wynk-dark-text-secondary">Copy link</a>
								</div>
								
							</div>
						</div>
						<div class="h-10"></div>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>
