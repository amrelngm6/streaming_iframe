<div x-data="{}" class="fixed inset-0  overflow-y-auto hidden transition-all transition"  id="track-options-popup" role="dialog" aria-modal="true" data-headlessui-state="open" style="z-index:99">
	<div class="min-h-full text-center">
		<div class="fixed inset-0 bg-download_popup blurFilter opacity-100" id="headlessui-dialog-overlay-:r3n:" aria-hidden="true" data-headlessui-state="open"></div>
		<span class="hidden lg:inline-block h-screen align-middle" aria-hidden="true">â€‹</span>
		<div data-testid="loginContainer" class="inline-block dark:text-white w-full max-w-[42.125rem] sm:w-auto overflow-hidden text-left align-middle transition-all transform shadow-xl h-auto md:h-[29.125rem] rounded-xl border-box opacity-100 scale-100">
			<div class="grid grid-cols-7 md:grid-cols-12 h-full relative">
				<div id="track-options-cover" class="login_loginImage__1Djxq bg-cover hidden md:block col-span-5 w-full bg-wynk-dark-dark_popup bg-no-repeat" style="background-image: url()"></div>
				<div class="align-middle bg-wynk-dark-dark_popup col-span-7 px-8 pb-8 pt-10 md:pb-6 md:pl-[2.125rem] md:pr-7 relative flex flex-col justify-between">
					<div x-on:click="jQuery('#track-options-popup').addClass('hidden')" data-testid="loginCrossButton" class="h-6 w-6 right-4 top-4 dark:text-white hover:text-gray-400 cursor-pointer absolute">
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
							<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
					</div>

					<div class="inline-block w-full">
                        <div class="text-primary  w-full  rounded-2xl ">
                            <div class="w-full ">
                                <h4 id="track-item-title" class="text-lg text-primary pb-4"></h4>
                                <div class="z-20 rounded-2xl w-full  bg-white dark:bg-gray-900 dark:text-gray-300 p-4 ">
                                    
                                    {% if app.customer_auth %}
                                    <p  class="cursor-pointer flex w-full gap-2 py-2"   onclick="(function(){ let id = jQuery('#activeItemId').val(); let img = 'url(/stream?thumbnail=800&image='+jQuery('#activeItemPicture').val()+')'; return jQuery('#add-playlist-popup').removeClass('hidden'),  jQuery('#add-playlist-cover').css('background-image', img ), jQuery('#add-playlist-media').val(id),  jQuery('#track-options-popup').addClass('hidden');  })();return false;" >
                                        <img src="/src/front_assets/svg/queue_list.svg" width="24" />
                                        <span class="w-full text-xs pt-1">{{lang.translate('Add to playlist')}}</span>
                                    </p>
                                    {% endif %}
                                    
                                    <hr class="opacity-50" />
                                    <p  class="cursor-pointer flex w-full gap-2 py-2 ajax-load"  onclick="(function(){ return loadPage('/audio/'+jQuery('#activeItemId').val()), jQuery('#track-options-popup').addClass('hidden');  })(); return false; "  >
                                        <img src="/src/front_assets/svg/playlist.svg" width="24" />
                                        <span class="w-full text-xs pt-1">{{lang.translate('View')}}</span>
                                    </p>
                                    <hr class="opacity-50" />
						
									<a  class="cursor-pointer text-gray-600 flex w-full gap-2 py-2"   x-on:click="(function(){ 
										navigator.clipboard.writeText(embedIframeCode('{{app.CONF.url}}embed_audio/'+jQuery('#activeItemId').val()));
										Swal.fire('{{lang.translate('Done')}}', '{{lang.translate('Iframe code copied to your clipboard')}}', 'success'); })()" >
										<img src="/src/front_assets/svg/embed.svg" width="24" />
										<span class="w-full text-xs pt-1">{{lang.translate('Embed Iframe')}}</span>
									</a>
                                </div>
                            </div>
                        </div>
                        <div class="h-10"></div>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>