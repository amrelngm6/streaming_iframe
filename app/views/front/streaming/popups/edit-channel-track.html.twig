							<input type="hidden" name="params[channel_id]"  value="{{item.channel_id}}"/>
							<input type="hidden" value="{{item.channel_media_id}}" name="params[channel_media_id]"  />
							<div class="w-full p-6 mt-4 relative flex w-96 overflow-auto flex-col rounded-lg  shadow-sm">
