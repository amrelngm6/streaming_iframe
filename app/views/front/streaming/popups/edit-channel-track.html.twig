										<input name="params[start_at]" step="5" type="time" value="{{item.start_at}}" id="channelRecordStart"  class=" bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-2 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="{{lang.translate('Start time')}}" required/>
									</div>
								</div>
							</div>
							<div class="text-center w-full py-2 flex  gap-2">

